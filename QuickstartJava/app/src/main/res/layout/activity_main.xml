<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:columnCount="6">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ki2+.01"
        android:id="@+id/button3"
        android:layout_row="1"
        android:layout_column="3"
        android:onClick="kdclick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/kdtxt"
        android:layout_row="1"
        android:layout_column="4" />

    <Button
            android:id="@+id/ButtonFish"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:text="@string/ButtonFish"
            android:onClick="switchMode"
        android:layout_row="2"
        android:layout_column="0" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ki + .01"
        android:id="@+id/button4"
        android:layout_row="2"
        android:layout_column="3"
        android:onClick="kiclick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/kitxt"
        android:layout_row="2"
        android:layout_column="4" />

    <Button
        android:id="@+id/Buttonserial"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Initialize"
        android:onClick="robotInitialize"
        android:layout_row="3"
        android:layout_column="0" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="k2+1"
        android:id="@+id/button5"
        android:layout_row="3"
        android:layout_column="3"
        android:onClick="k2click" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/k2txt"
        android:layout_row="3"
        android:layout_column="4" />

    <Button
        android:id="@+id/ButtonHeader"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:onClick="reset"
        android:layout_row="4"
        android:layout_column="0" />

    <Button
        android:id="@+id/Button3D"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/Button"
        android:onClick="button3dclick"
        android:layout_row="0"
        android:layout_column="0" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="k + .1"
        android:id="@+id/button2"
        android:layout_row="0"
        android:layout_column="3"
        android:onClick="kclick" />

    <Button
        android:id="@+id/ButtonCam"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:text="@string/ButtonCam"
        android:onClick="buttonCameraclick"
        android:layout_row="1"
        android:layout_column="0" />

    <FrameLayout
        android:layout_width="5dip"
        android:layout_height="5dip"
        android:layout_row="1"
        android:layout_column="1"></FrameLayout>

    <TextView
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/terminal"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_rowSpan="14"
        android:text="Inertial" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dx+1"
        android:id="@+id/button6"
        android:layout_row="4"
        android:layout_column="3"
        android:onClick="kd2click" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/kd2txt"
        android:layout_row="4"
        android:layout_column="4" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Reset Gains"
        android:id="@+id/button"
        android:layout_row="5"
        android:layout_column="0"
        android:onClick="ResetGains"
        android:nestedScrollingEnabled="false" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button7"
        android:layout_row="5"
        android:layout_column="3"
        android:text="dz+1"
        android:onClick="ki2click" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/ktxt"
        android:layout_row="0"
        android:layout_column="4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/ki2txt"
        android:layout_row="5"
        android:layout_column="4" />

</GridLayout>
